<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-inherit="web.FormStatusIndicator" t-inherit-mode="extension">
        <xpath expr="//t[@t-name='web.FormStatusIndicator']//button[contains(@class, 'o_form_button_save')]" position="replace">
            <button type="button" class="o_form_button_save btn btn-primary mx-2" data-hotkey="s" t-on-click.stop="save" data-tooltip="Save manually" aria-label="Save manually" t-ref="save">
                Spara
            </button>
        </xpath>
    </t>
</templates>