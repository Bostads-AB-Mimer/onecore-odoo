<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Set internal mail subtypes as default -->
        <!-- This ensures followers get notified on notes and activities by default -->

        <!-- Search for internal subtypes and update them -->
        <function model="mail.message.subtype" name="search">
            <value eval="[('internal', '=', True)]" />
        </function>

        <!-- Write to update default field -->
        <function model="mail.message.subtype" name="write">
            <function model="mail.message.subtype" name="search">
                <value eval="[('internal', '=', True)]" />
            </function>
            <value eval="{'default': True}" />
        </function>
    </data>
</odoo>