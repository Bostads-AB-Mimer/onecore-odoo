<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.onecore.maintenance</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="35"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//form" position="inside">
                    <app data-string="ONECore Maintenance" string="ONECore Maintenance" name="onecore_maintenance" groups="onecore_maintenance.group_equipment_manager">
                        <block title="Custom Worksheets">
                            <setting help="Create custom worksheet templates">
                                <field name="module_onecore_maintenance_worksheet"/>
                            </setting>
                        </block>
                    </app>
                </xpath>
            </field>
        </record>

        <record id="onecore_action_maintenance_configuration" model="ir.actions.act_window">
            <field name="name">Settings</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
            <field name="context">{'module' : 'onecore_maintenance', 'bin_size': False}</field>
        </record>

        <menuitem id="onecore_menu_maintenance_config" name="Settings" parent="onecore_menu_maintenance_configuration"
            sequence="0" action="onecore_action_maintenance_configuration" groups="base.group_system"/>

    </data>
</odoo>
